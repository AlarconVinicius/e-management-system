@model IEnumerable<EMS.WebApp.MVC.Business.Models.ViewModels.ProductViewModel>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Produtos";
}

<div class="mb-3">
    <h4>Produtos</h4>
</div>
<div class="card border-0 col-md-12">
    <div class="card-header d-flex justify-content-between">
        <h5 class="card-title">
            Produtos
        </h5>
        <div class="d-flex align-items-center">
            <div class="input-group me-3">
                <input type="text"
                       class="form-control"
                       placeholder="Pesquisar"
                       aria-label="Pesquisar"
                       aria-describedby="pesquisar" />
                <button class="btn btn-outline-secondary"
                        type="button"
                        id="pesquisar">
                    <i class="fa fa-search"></i>
                </button>
            </div>
            <a asp-controller="Products" asp-action="Create" class="btn btn-success align-self-center w-75">
                Adicionar Produto
            </a>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Imagem</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Tipo</th>
                    <th scope="col">Peso</th>
                    <th scope="col">Estoque</th>
                    <th scope="col">Valor unitário</th>
                    <th scope="col">Status</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@(Model.ToList().IndexOf(product) + 1)</td>
                        @*<th scope="row">1</th>*@
                        <td>Imagem ABC</td>
                        <td>@product.Title</td>
                        <td>@product.Description</td>
                        <td>Kilo</td>
                        <td>1</td>
                        <td>10</td>
                        <td>R$ @product.UnitaryValue.ToString("0.00")</td>
                        <td>@(product.IsActive ? "Ativo" : "Desativado")</td>
                        <td>
                            <a href="#" class="btn btn-info me-3"><span class="fa fa-unlock"></span></a>
                            <a asp-controller="Products" asp-action="Details" class="btn btn-warning me-3"><span class="fa fa-eye"></span></a>
                            <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning me-3"><span class="fa fa-pencil-alt"></span></a>
                            <a asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" data-bs-toggle="modal" data-bs-target="#ModalDeleteRecipe" class="btn btn-danger"><span class="fa fa-trash"></span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>