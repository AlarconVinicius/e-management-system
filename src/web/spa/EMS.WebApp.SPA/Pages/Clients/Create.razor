@page "/clientes/adicionar"
@using Microsoft.AspNetCore.Authorization
@inherits CreateClientPage
@attribute [Authorize]

<MudText Typo="Typo.h3">Novo Cliente</MudText>

<MudPaper Class="pa-8 mt-4">
    <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
        <DataAnnotationsValidator />

        <MudTextField Label="Nome"
                      HelperText="Campo obrigatório"
                      @bind-Value="InputModel.Name"
                      For="@(() => InputModel.Name)" />

        <MudTextField Label="Sobrenome"
                      HelperText="Campo obrigatório"
                      @bind-Value="InputModel.LastName"
                      For="@(() => InputModel.LastName)" />

        <MudTextField Label="E-mail"
                      HelperText="Campo obrigatório"
                      @bind-Value="InputModel.Email"
                      For="@(() => InputModel.Email)" />

        <MudTextField Label="Celular"
                      HelperText="Campo obrigatório"
                      @bind-Value="InputModel.PhoneNumber"
                      For="@(() => InputModel.PhoneNumber)" />

        <MudTextField Label="Documento"
                      HelperText="Campo obrigatório"
                      @bind-Value="InputModel.Document"
                      For="@(() => InputModel.Document)" />


        @if (IsBusy)
        {
            <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
        }
        else
        {
            <MudButton ButtonType="ButtonType.Submit"
                       Variant="Variant.Filled"
                       Color="Color.Primary">
                Salvar
            </MudButton>
        }
    </EditForm>
</MudPaper>