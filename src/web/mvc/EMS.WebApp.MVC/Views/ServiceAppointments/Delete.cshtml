@using EMS.Core.Enums
@using EMS.Core.Responses.ServiceAppointments;
@model ServiceAppointmentResponse

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Deletar Agendamento";
}

<div class="card border-0 col-md-12">
    <div class="card-header d-flex justify-content-between">
        <h5 class="card-title">
            Você tem certeza que deseja deletar o Agendamento:  @Model.AppointmentStart  —  @Model.AppointmentEnd
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <dl class="row">
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.ClientName)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.ClientName) @Html.DisplayFor(model => model.ClientLastname)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.EmployeeName)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.EmployeeName) @Html.DisplayFor(model => model.EmployeeLastname)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.ServiceName)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.ServiceName)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.AppointmentStart)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.AppointmentStart)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.AppointmentEnd)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.AppointmentEnd)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-6">
                        @Enum.GetName(typeof(EServiceStatusCore), Model.Status)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.CreatedAt)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.CreatedAt)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.UpdatedAt)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.UpdatedAt)
                    </dd>
                </dl>

                <form asp-action="Delete" class="form-group mt-3<vc:Summary></vc:Summary>">
                    <input type="hidden" asp-for="@Model.Id" />
                    <a asp-action="Index" class="btn btn-warning me-3">Voltar</a>
                    <input type="submit" value="Deletar" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
