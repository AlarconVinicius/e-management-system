@using EMS.Core.Requests.ServiceAppointments;
@model UpdateServiceAppointmentRequest
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Editar Agendamento";
}

<div class="card border-0 col-md-12">
    <div class="card-header d-flex justify-content-between">
        <h5 class="card-title">
            Editar Agendamento:  @Model.AppointmentStart  —  @Model.AppointmentEnd
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="ClientId" class="control-label"></label>
                        <select asp-for="ClientId" class="form-control" asp-items="@(new SelectList(ViewBag.Clients, "Id", "Name", Model.ClientId))">
                            <option value="">Selecione um cliente</option>
                        </select>
                        <span asp-validation-for="ClientId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="EmployeeId" class="control-label"></label>
                        <select asp-for="EmployeeId" class="form-control" asp-items="@(new SelectList(ViewBag.Employees, "Id", "Name", Model.EmployeeId))">
                            <option value="">Selecione um colaborador</option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ServiceId" class="control-label"></label>
                        <select asp-for="ServiceId" class="form-control" asp-items="@(new SelectList(ViewBag.Services, "Id", "Name", Model.ServiceId))">
                            <option value="">Selecione um serviço</option>
                        </select>
                        <span asp-validation-for="ServiceId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="AppointmentStart" class="control-label"></label>
                        <input asp-for="AppointmentStart" class="form-control" type="datetime-local" asp-format="{0:yyyy-MM-ddTHH:mm}" />
                        <span asp-validation-for="AppointmentStart" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status" class="form-control" asp-items="@(new SelectList(ViewBag.StatusList, "Id", "Name", Model.Status))">
                            <option value="">Selecione um status</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <a asp-action="Index" class="btn btn-warning me-3">Voltar</a>
                        <button type="submit" class="btn btn-primary">Atualizar</button>
                    </div>
                </form>
