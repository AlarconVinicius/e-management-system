@using EMS.Core.Responses.Services;
@using EMS.WebApp.MVC.Extensions
@model ServiceResponse

@{
    Layout = "_LayoutAdmin2";
    ViewData["Title"] = "Deletar Serviço";
}
<div class="page-header">
    <div class="page-title">
        <h4>Você tem certeza que deseja deletar o Serviço: @Model.Name</h4>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="productdetails">
                    <ul class="product-bar">
                        <li>
                            <h4>
                                @Html.DisplayNameFor(model => model.Name)
                            </h4>
                            <h6>
                                @Html.DisplayFor(model => model.Name)
                            </h6>
                        </li>
                        <li>
                            <h4>
                                @Html.DisplayNameFor(model => model.Price)
                            </h4>
                            <h6>
                                @this.FormatCurrency(Model.Price)
                            </h6>
                        </li>
                        <li>
                            <h4>
                                @Html.DisplayNameFor(model => model.Duration)
                            </h4>
                            <h6>
                                @this.FormatTimeSpan(Model.Duration)
                            </h6>
                        </li>
                        <li>
                            <h4>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </h4>
                            <h6>
                                @(Model.IsActive ? "Ativo" : "Inativo")
                            </h6>
                        </li>
                        <li>
                            <h4>
                                @Html.DisplayNameFor(model => model.CreatedAt)
                            </h4>
                            <h6>
                                @this.FormatDate(Model.CreatedAt)
                            </h6>
                        </li>
                        <li>
                            <h4>
                                @Html.DisplayNameFor(model => model.UpdatedAt)
                            </h4>
                            <h6>
                                @this.FormatDate(Model.UpdatedAt)
                            </h6>
                        </li>
                    </ul>
                </div>
                <div class="mt-3">
                    @* <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-submit me-2">Editar</a> *@
                    <form asp-action="Delete">
                        <a asp-action="Index" class="btn btn-cancel">Voltar</a>
                        <input type="hidden" asp-for="@Model.Id" />
                        <input type="submit" value="Deletar" class="btn btn-submit me-2" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


