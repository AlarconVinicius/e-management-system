@using EMS.Core.Responses.Services;
@using EMS.WebApp.MVC.Extensions
@model ServiceResponse

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Detalhes do Serviço";
}

<div class="card border-0 col-md-12">
    <div class="card-header d-flex justify-content-between">
        <h5 class="card-title">
            Detalhes do Serviço: @Model.Name
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <dl class="row">
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd class="col-sm-6">
                        @this.FormatCurrency(Model.Price)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Duration)
                    </dt>
                    <dd class="col-sm-6">
                        @this.FormatTimeSpan(Model.Duration)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.IsActive)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.IsActive)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.CreatedAt)
                    </dt>
                    <dd class="col-sm-6">
                        @this.FormatDate(Model.CreatedAt)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.UpdatedAt)
                    </dt>
                    <dd class="col-sm-6">
                        @this.FormatDate(Model.UpdatedAt)
                    </dd>
                </dl>
                <div class="form-group mt-3">
                    <a asp-action="Index" class="btn btn-warning me-3">Voltar</a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
                </div>
            </div>
        </div>
    </div>
</div>
