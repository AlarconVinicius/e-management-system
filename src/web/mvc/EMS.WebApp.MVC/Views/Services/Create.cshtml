@using EMS.Core.Requests.Services;
@model CreateServiceRequest
@{
    Layout = "_LayoutAdmin2";
    ViewData["Title"] = "Adicionar Serviço";
}
@section Styles {
    @{
        // <link rel="stylesheet" href="~/template_admin_2/css/bootstrap-datetimepicker.min.css">
        <link rel="stylesheet" href="~/template_admin_2/plugins/select2/css/select2.min.css" />
    }
}

<vc:Notification></vc:Notification>
<div class="page-header">
    <div class="page-title">
        <h4>Adicionar Serviço</h4>
        @* <h6>Adicionar Serviço</h6> *@
    </div>
</div>
<vc:Summary></vc:Summary>
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" class="form-control" type="number"/>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label asp-for="Duration" class="control-label"></label>
                                <input asp-for="Duration" class="form-control" type="time" />
                                <span asp-validation-for="Duration" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label asp-for="IsActive" class="control-label"></label>
                                <select asp-for="IsActive" class="form-control form-small select">
                                    <option value="true" selected>Ativo</option>
                                    <option value="false">Inativo</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <a asp-action="Index" class="btn btn-cancel">Voltar</a>
                            <button type="submit" class="btn btn-submit me-2">Adicionar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        <script src="~/template_admin_2/plugins/select2/js/select2.min.js"></script>
        // <script src="~/template_admin_2/js/moment.min.js"></script>
        // <script src="~/template_admin_2/js/bootstrap-datetimepicker.min.js"></script>

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}