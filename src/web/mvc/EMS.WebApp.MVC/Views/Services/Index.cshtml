@using EMS.Core.Responses.Services;
@using EMS.WebApp.MVC.Extensions;
@model PagedViewModel<ServiceResponse>
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Serviços";
    var itemIndex = 0;
}

<vc:Notification></vc:Notification>
<div class="card border-0 col-md-12">
    <div class="card-header d-flex justify-content-between">
        <h5 class="card-title">
            Serviços
        </h5>

        <form method="get" asp-controller="Services" asp-action="Index">
            <div class="d-flex align-items-center">
                <div class="input-group me-3">
                    <input type="text"
                           class="form-control"
                           placeholder="Pesquisar"
                           aria-label="Pesquisar"
                           aria-describedby="pesquisar"
                           id="q" name="q"
                           value="@ViewBag.Search" />
                    <button class="btn btn-outline-secondary"
                            type="submit"
                            id="pesquisar">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
                <a asp-controller="Services" asp-action="Create" class="btn btn-success align-self-center w-75">
                    Adicionar Serviço
                </a>
            </div>
        </form>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Preço</th>
                    <th scope="col">Duração</th>
                    <th scope="col">Status</th>
                    <th scope="col">Data de Cadastro</th>
                    <th scope="col">Data de Modificação</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model.List)
                {
                    <tr>
                        <td>@(Model.PageSize * (Model.PageIndex - 1) + itemIndex + 1)</td>
                        <td>@service.Name</td>
                        <td>@this.FormatCurrency(service.Price)</td>
                        <td>@this.FormatTimeSpan(service.Duration)</td>
                        <td>@(service.IsActive ? "Ativo" : "Desativado")</td>
                        <td>@this.FormatDate(service.CreatedAt)</td>
                        <td>@this.FormatDate(service.UpdatedAt)</td>
                        <td>
                            @* <a asp-controller="Services" asp-action="Block" class="btn btn-info me-3"><span class="fa fa-unlock"></span></a> *@
                            <a asp-controller="Services" asp-action="Details" asp-route-id="@service.Id" class="btn btn-info me-3"><span class="fa fa-eye"></span></a>
                            <a asp-controller="Services" asp-action="Edit" asp-route-id="@service.Id" class="btn btn-warning me-3"><span class="fa fa-pencil-alt"></span></a>
                            <a asp-controller="Services" asp-action="Delete" asp-route-id="@service.Id" class="btn btn-danger"><span class="fa fa-trash"></span></a>
                        </td>
                    </tr>
                    itemIndex++;
                }
            </tbody>
        </table>
        <vc:pagination paged-model="@Model"></vc:pagination>
    </div>
</div>