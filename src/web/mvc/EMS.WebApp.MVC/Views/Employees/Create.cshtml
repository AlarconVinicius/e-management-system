@using EMS.Core.Requests.Employees;
@model CreateEmployeeAndUserRequest
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Adicionar Colaborador";
}

<vc:Notification></vc:Notification>
<div class="card border-0 col-md-12">
    <div class="card-header d-flex justify-content-between">
        <h5 class="card-title">
            Adicionar Colaborador
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Employee.Name" class="control-label"></label>
                        <input asp-for="Employee.Name" class="form-control" />
                        <span asp-validation-for="Employee.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Employee.LastName" class="control-label"></label>
                        <input asp-for="Employee.LastName" class="form-control" />
                        <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Employee.Email" class="control-label"></label>
                        <input asp-for="Employee.Email" class="form-control" />
                        <span asp-validation-for="Employee.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Employee.PhoneNumber" class="control-label"></label>
                        <input asp-for="Employee.PhoneNumber" type="text" class="form-control" />
                        <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Employee.Document" class="control-label"></label>
                        <input asp-for="Employee.Document" type="text" class="form-control" />
                        <span asp-validation-for="Employee.Document" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Employee.IsActive" /> @Html.DisplayNameFor(model => model.Employee.IsActive)
                        </label>
                    </div>
                    <div class="form-group mt-3">
                        <a asp-action="Index" class="btn btn-warning me-3">Voltar</a>
                        <button type="submit" class="btn btn-primary">Adicionar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}