@using EMS.Core.Requests.Employees;
@model UpdateEmployeeAndUserRequest
@{
    Layout = "_LayoutAdmin2";
    ViewData["Title"] = "Editar Colaborador";
}

<vc:Notification></vc:Notification>
<div class="page-header">
    <div class="page-title">
        <h4>
            Editar Colaborador: @Model.Employee.Name @Model.Employee.LastName
        </h4>
    </div>
</div>
<vc:Summary></vc:Summary>
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label asp-for="Employee.Name" class="control-label"></label>
                                <input asp-for="Employee.Name" class="form-control" />
                                <span asp-validation-for="Employee.Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 col-12">
                            <div class="form-group">
                                <label asp-for="Employee.LastName" class="control-label"></label>
                                <input asp-for="Employee.LastName" class="form-control" />
                                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="Employee.Email" class="control-label"></label>
                                <input asp-for="Employee.Email" class="form-control" />
                                <span asp-validation-for="Employee.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label asp-for="Employee.PhoneNumber" class="control-label"></label>
                                <input asp-for="Employee.PhoneNumber" class="form-control" />
                                <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label class="control-label">CPF</label>
                                <input disabled class="form-control" value="@ViewBag.Document" />
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-6 col-12">
                            <div class="form-group">
                                <label asp-for="Employee.IsActive" class="control-label"></label>
                                <select asp-for="Employee.IsActive" class="form-control form-small select">
                                    <option value="true" selected>Ativo</option>
                                    <option value="false">Inativo</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <a asp-action="Index" class="btn btn-cancel">Voltar</a>
                            <button type="submit" class="btn btn-submit me-2">Salvar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}